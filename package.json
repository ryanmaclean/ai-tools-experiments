{
  "name": "ai-tools-experiments",
  "version": "1.0.0",
  "description": "AI Lab Experiments & Tools",
  "main": "index.js",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && node ./scripts/create-pages-directory.js",
    "lint": "astro check && eslint . --ext .astro,.js,.jsx,.ts,.tsx",
    "test": "npm run test:docker",
    "verify:deps": "node ./scripts/verify-dependencies.js",
    "serverless:instrument": "./scripts/instrument-lambda.sh",
    "serverless:list": "DD_SITE=datadoghq.com datadog-ci lambda list-functions",
    "test:visual": "node tests/visual-comparison-test.js",
    "test:visual:dd": "vitest run tests/visual.test.js --reporter verbose",
    "test:visual:watch": "vitest tests/visual.test.js",
    "test:visual:ci": "DD_TEST_REPORT=true vitest run tests/visual.test.js --reporter json --outputFile ./test-results/visual-test-results.json",
    "test:screenshot": "node tests/capture-screenshots.js",
    "test:datadog": "node tests/validate-datadog-integration.js",
    "test:snapshot": "vitest run tests/snapshot-test.js",
    "test:a11y": "node tests/accessibility-test.js",
    "test:comprehensive": "node tests/comprehensive-site-test.js",
    "test:llm": "node tests/visual-llm-test.js",
    "test-episodes": "node ./tests/episode-checker.js",
    "docker:test": "docker-compose -f docker-compose-test.yml up",
    "synthetics:setup": "./tests/run-datadog-synthetics.sh",
    "synthetics:test": "node ./tests/setup-datadog-synthetics.js",
    "synthetics:ci": "DD_API_KEY=$DD_API_KEY DD_APP_KEY=$DD_APP_KEY node ./tests/setup-datadog-synthetics.js",
    "synthetics:verify": "node hooks/verify-datadog-synthetics.js",
    "synthetics:validate": "node terraform/validate-config.js",
    "synthetics:sequential": "node tests/datadog-sequential-test.js",
    "synthetics:parallel": "node tests/datadog-test-runner.js",
    "synthetics:parallel:debug": "DEBUG=true node tests/datadog-test-runner.js",
    "synthetics:parallel:ci": "MAX_RETRIES=3 DD_TEST_REPORT=true node tests/datadog-test-runner.js",
    "synthetics:direct-setup": "node tests/direct-datadog-setup.js",
    "synthetics:mcp": "node hooks/mcp-datadog-validator.js",
    "synthetics:deploy": "node tests/deploy-dd-synthetics.js",
    "synthetics:validate-dual": "node tests/dual-environment-validator.js",
    "synthetics:terraform": "terraform/run-terraform-synthetics.sh",
    "synthetics:terraform:init": "cd terraform && terraform init",
    "synthetics:terraform:plan": "cd terraform && terraform plan",
    "synthetics:terraform:apply": "cd terraform && terraform apply",
    "synthetics:vitest": "vitest run tests/validate-synthetics.test.js",
    "synthetics:cli": "node tests/cli-datadog-validator.js",
    "synthetics:mcp-visual": "node tests/visual-validation-mcp.js",
    "test:components": "node tests/datadog-component-validator.js",
    "test:precommit": "node tests/pre-commit-test.js",
    "precommit:full": "npm run test:components && npm run synthetics:validate-dual",
    "hooks:install": "node hooks/install-hooks.js",
    "precommit": "npm run test:components && node hooks/verify-datadog-synthetics.js",
    "validate:terraform": "cd terraform && ./validate-terraform.sh",
    "deploy:terraform": "cd terraform && terraform apply",
    "key:verify": "node tests/verify-key-rotation.js",
    "test:post-deploy": "playwright test tests/post-deploy-visual-comparison.js",
    "test:post-deploy:chrome": "playwright test tests/post-deploy-visual-comparison.js --project=chromium",
    "test:post-deploy:safari": "playwright test tests/post-deploy-visual-comparison.js --project=webkit",
    "test:post-deploy:mobile": "playwright test tests/post-deploy-visual-comparison.js --project='Mobile Chrome'",
    "test:post-deploy:ci": "playwright test tests/post-deploy-visual-comparison.js --reporter=json",
    "verify-environments": "node ./scripts/verify-environments.js",
    "verify-datadog": "node ./scripts/verify-datadog.js",
    "pre-deploy-check": "mkdir -p test-results && node ./scripts/pre-deploy-check.js",
    "post-deploy-check": "mkdir -p test-results && node ./scripts/post-deploy-check.js",
    "compare-environments": "mkdir -p test-results/comparison && playwright test tests/compare-environments.js",
    "sync-content": "node ./scripts/sync-content.js",
    "sync-episodes": "node ./scripts/sync-episodes.js",
    "sync-all": "node ./scripts/sync-all-content.js",
    "verify-episodes": "mkdir -p test-results && node ./tests/verify-episodes.js",
    "verify-content-integrity": "mkdir -p test-results && node ./tests/verify-content-integrity.js",
    "verify-links": "mkdir -p test-results && node ./tests/verify-all-links.js",
    "visual-compare": "mkdir -p test-results/visual-comparison && node ./tests/content-visual-comparison.js",
    "verify-all": "npm run verify-content-integrity && npm run verify-links && npm run visual-compare"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanmaclean/ai-tools-experiments.git"
  },
  "keywords": [
    "ai",
    "tools",
    "experiments"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryanmaclean/ai-tools-experiments/issues"
  },
  "homepage": "https://github.com/ryanmaclean/ai-tools-experiments#readme",
  "dependencies": {
    "@datadog/browser-rum": "^4.31.0",
    "chromium": "^3.0.3",
    "dd-trace": "^3.32.0",
    "hot-shots": "^10.0.0",
    "node-fetch": "^2.6.7",
    "playwright": "^1.52.0",
    "sharp": "^0.34.1"
  },
  "optionalDependencies": {
    "canvas": "^3.1.0"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.2.6",
    "@datadog/datadog-api-client": "^1.34.1",
    "@datadog/datadog-ci": "^3.0.1",
    "@playwright/test": "^1.52.0",
    "@testing-library/dom": "^10.4.0",
    "astro": "^5.7.10",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "jest-image-snapshot": "^6.4.0",
    "jsdom": "^26.1.0",
    "pixelmatch": "^7.1.0",
    "vitest": "^3.1.3",
    "web-vitals": "^3.5.2"
  },
  "resolutions": {
    "@rollup/rollup-linux-arm64-gnu": "latest"
  },
  "overrides": {}
}
