{
  "tests": [
    {
      "id": "netlify-deployment-monitor",
      "name": "AI Tools Netlify Deployment Monitor",
      "type": "browser",
      "request": {
        "method": "GET",
        "url": "https://ai-tools-lab-tst.netlify.app"
      },
      "assertions": [
        {
          "type": "statusCode",
          "operator": "is",
          "target": 200
        },
        {
          "type": "body",
          "operator": "contains",
          "target": "AI Tools"
        }
      ],
      "locations": ["aws:us-west-1", "aws:us-east-1"],
      "options": {
        "min_failure_duration": 300,
        "min_location_failed": 1,
        "tick_every": 900
      },
      "message": "The AI Tools Netlify site is not responding as expected.",
      "tags": [
        "env:test",
        "service:ai-tools-lab",
        "deployment:netlify"
      ]
    },
    {
      "id": "netlify-dependencies-check",
      "name": "AI Tools Netlify Dependencies Check",
      "type": "browser",
      "request": {
        "method": "GET",
        "url": "https://ai-tools-lab-tst.netlify.app/about"
      },
      "assertions": [
        {
          "type": "statusCode",
          "operator": "is",
          "target": 200
        },
        {
          "type": "body",
          "operator": "doesNotContain",
          "target": "ReferenceError"
        },
        {
          "type": "body",
          "operator": "doesNotContain",
          "target": "Cannot find module"
        }
      ],
      "locations": ["aws:us-west-1"],
      "options": {
        "min_failure_duration": 180,
        "min_location_failed": 1,
        "tick_every": 900
      },
      "message": "The AI Tools Netlify site has dependency issues.",
      "tags": [
        "env:test",
        "service:ai-tools-lab",
        "deployment:netlify",
        "check:dependencies"
      ]
    }
  ]
}
