---
// Import components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Define props interface
interface Props {
	title: string;
}

// Get props
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="AI Tools and Experiments Showcase">
	<link rel="icon" type="image/webp" href="/images/ai-tools-lab-logo.webp"> 
	<meta name="generator" content={Astro.generator}>
	<title>{title} | AI Tools Experiments</title>

	<!-- Link to external fonts if needed, e.g., Google Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Revalia&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="/styles.css?v=1.0.1" /> <!-- Added version parameter for cache busting -->
 
	<!-- Datadog RUM monitoring - NPM package approach -->
	<script>
		// Import Datadog browser RUM directly using the CDN approach to avoid 404s
		!function(e,t,n,a,s){e[a]=e[a]||[],e[a].push({
			'api_key': 'pub3ab714d81ea179c4cf78b41467d1090b',
			'application_id': '719fdc0f-589e-4c5a-bf1c-fa42f53208fd',
			'site': 'datadoghq.com',
			'service': 'ai-tools-lab-tst',
			'env': window.location.hostname.includes('ai-tools-lab-tst') ? 'staging' : 
				(window.location.hostname.includes('ai-tools-lab.com') ? 'production' : 'development'),
			'session_sample_rate': 100,
			'session_replay_sample_rate': 100,
			'default_privacy_level': 'mask-user-input',
			'track_user_interactions': true,
			'track_resources': true,
			'track_long_tasks': true,
			// Enable error tracking
			'forward_errors': true,
			// Use most reliable beacon transport
			'use_beacon': true,
			'use_fetch': false
		});
		
		// Initialize the RUM SDK
		var i=t.createElement(n);i.async=1;i.src='https://www.datadoghq-browser-agent.com/us1/v5/datadog-rum.js';
		var r=t.getElementsByTagName(n)[0];r.parentNode.insertBefore(i,r);
		
		// Log to console for verification
		console.log('[Datadog] RUM initialized with application ID: 719fdc0f-589e-4c5a-bf1c-fa42f53208fd');
		
		// Debugging handler
		window.addEventListener('datadog:initialized', function() {
			console.log('[Datadog] RUM SDK initialized successfully!');
		});
		}(window,document,'script','DD_RUM','DD_RUM_CONFIGS');
	</script>
</head>
<body>
	<Header />
	<slot /> <!-- Page content will be injected here -->
	<Footer />
	<script is:inline>
		// Simple script to ensure header and footer are accessible
		document.addEventListener('DOMContentLoaded', () => {
			// Toggle mobile menu if elements exist
			const hamburger = document.querySelector('.hamburger-menu');
			const mobileNav = document.querySelector('.mobile-nav');
			
			if (hamburger && mobileNav) {
				hamburger.addEventListener('click', () => {
					mobileNav.classList.toggle('open');
				});
			}
		});
	</script>
 </body>
 </html>
