---
// src/pages/about.astro
import MainLayout from '../../layouts/MainLayout.astro';

const pageTitle = "About AI Tools Lab";
const description = "Learn more about the AI Tools Lab project, its goals, and the host.";
const ogImageUrl = "/images/ai-tools-lab-logo.png"; // Use the logo as a default OG image
---

<MainLayout title={pageTitle} description={description} ogImage={ogImageUrl}>
    <main class="container about-section-main">

        <div class="about-content">
            <section class="about-section-block">
                <h2>What is AI Tools Lab?</h2>
                <div class="about-flex-container">
                    <div class="about-text">
                        <p>
                            AI Tools Lab consists of 30-40 minute recorded technical demonstrations of hands-on (early or first)
                            experiences with AI-related tooling for developers. Each episode explores different aspects of
                            AI tools and their practical applications in software development.
                        </p>
                    </div>
                    <div class="about-image">
                        <img src="/images/ai-tools-lab-logo.png" alt="AI Tools Lab Logo" style="max-width: 150px; height: auto; border-radius: 8px;">
                    </div>
                </div>
            </section>

            <section class="about-section-block">
                <h2>About the Host</h2>
                 <div class="about-flex-container">
                     <div class="about-text">
                        <p>
                            Your host is Ryan MacLean, a developer with a passion for exploring new technologies. Ryan shares his learning process,
                            challenges, and discoveries as he navigates the rapidly evolving landscape of AI tools.
                        </p>
                        <p>
                            Connect with Ryan on <a href="https://www.linkedin.com/in/ryanmaclean/" target="_blank" rel="noopener noreferrer">LinkedIn</a>.
                        </p>
                    </div>
                     <div class="about-image">
                        <img src="/images/headshot.jpg" alt="Ryan MacLean Headshot" style="max-width: 150px; height: auto; border-radius: 50%;">
                    </div>
                </div>
            </section>

            <section class="about-section-block">
                <h2>Contact & Suggestions</h2>
                <p>
                    Have questions, suggestions for tools to explore, or feedback? Feel free to reach out via LinkedIn or open an issue
                    on the project's <a href="https://github.com/jasonhand/ai-tools-experiments" target="_blank" rel="noopener noreferrer">GitHub repository</a> (if applicable).
                </p>
            </section>
        </div>
    </main>

    <style>
        /* Basic styles adapted from live site */
        .about-section-main { padding: 40px 0; }
        .about-content { max-width: 800px; margin: 0 auto; }
        .about-section-block { margin-bottom: 40px; padding-bottom: 30px; border-bottom: 1px solid #eee; }
        .about-section-block:last-child { border-bottom: none; margin-bottom: 0; }
        .about-section-block h2 { margin-bottom: 20px; font-size: 1.8rem; color: #333; }
        .about-flex-container { display: flex; align-items: flex-start; gap: 30px; }
        .about-text { flex: 3; }
        .about-image { flex: 1; text-align: center; }
        .about-image img { max-width: 100%; height: auto; }
        .about-content p { line-height: 1.7; margin-bottom: 15px; color: #555; }
        .about-content a { color: var(--primary-color); text-decoration: none; }
        .about-content a:hover { text-decoration: underline; }

        @media (max-width: 600px) {
            .about-flex-container { flex-direction: column; align-items: center; text-align: center; }
            .about-image { margin-top: 20px; }
        }
    </style>
</MainLayout>
