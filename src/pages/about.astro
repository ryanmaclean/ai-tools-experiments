---
// src/pages/about.astro
import MainLayout from '../layouts/MainLayout.astro';
import AboutContent from '../content/transcripts/about.html?raw';

const pageTitle = "About";
const description = "Learn about AI Tools Lab and our mission to explore and share insights on AI tools and technologies";
const ogImageUrl = "/images/ai-tools-lab-logo.png";
---

<MainLayout title={pageTitle} description={description} ogImage={ogImageUrl}>
  <!-- Render the imported HTML content -->
  <Fragment set:html={AboutContent} />
</MainLayout>
