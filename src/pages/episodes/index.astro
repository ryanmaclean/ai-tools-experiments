---
/**
 * Episodes Index Page
 * 
 * Lists all available episodes with links to individual episode pages.
 * Uses imported HTML content from the synchronization script.
 */
import MainLayout from '../../layouts/MainLayout.astro';

// Import episodes index content directly
import episodesContent from '../../imported/episodes2.html?raw';
---

<MainLayout title="Episodes | AI Tools Lab">
  <div class="episodes-page">
    <!-- Use the imported episode index content -->
    <div set:html={episodesContent} />
  </div>
</MainLayout>

<style>
  .episodes-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 1rem;
  }
  
  :global(.episodes-container ul) {
    list-style-type: none;
    padding: 0;
    margin: 2rem 0;
  }
  
  :global(.episodes-container li) {
    margin-bottom: 1rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid #eaeaea;
  }
  
  :global(.episodes-container a) {
    color: #0070f3;
    text-decoration: none;
    font-weight: 500;
  }
  
  :global(.episodes-container a:hover) {
    text-decoration: underline;
  }
</style>
