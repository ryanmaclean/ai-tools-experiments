---
import MainLayout from '../layouts/MainLayout.astro';
const pageTitle = "Home | AI Tools Lab";
const description = "Collection of AI tools experiments and resources.";

// Load the HTML content directly from the imported file
const htmlFiles = import.meta.glob('../content/imported/home.html', { query: '?raw', eager: true });
const indexHtmlContent = htmlFiles['../content/imported/home.html'].default;
---

<MainLayout title={pageTitle} description={description}>
  {/* Simply render the imported raw HTML content without any custom JavaScript or styling */}
  <div set:html={indexHtmlContent} />
</MainLayout>
