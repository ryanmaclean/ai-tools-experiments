        border-radius: 50%;
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.9;
        transition: all 0.3s ease;
    }
    
    .featured-episode-video:hover .play-button-overlay {
        background-color: rgba(0, 102, 204, 1);
        opacity: 1;
        transform: translate(-50%, -50%) scale(1.1);
    }
    
